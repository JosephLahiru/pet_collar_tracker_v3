<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPanelActivity"
    android:background="@mipmap/dog1"
    >

    <TextView
        android:id="@+id/userPanelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME USER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="35sp"
        android:layout_marginTop="40dp"
        android:textColor="#696969"
        />

    <Button
        android:id="@+id/deviceLocationHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:text="DEVICE\nLOCATION\nHISTORY"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPanelTextView"
        />

    <Button
        android:id="@+id/deviceCurrentLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="DEVICE\nCURRENT\nLOCATION"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceLocationHistoryButton"
        />

    <TextView
        android:id="@+id/currentUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently logged as"
        app:layout_constraintBottom_toTopOf="@+id/deviceLocationHistoryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPanelTextView"
        android:textSize="20sp"
        android:textColor="#696969"
        />

    <Button
        android:id="@+id/complaintFormButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPLAINT\nFORM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceCurrentLocationButton"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>