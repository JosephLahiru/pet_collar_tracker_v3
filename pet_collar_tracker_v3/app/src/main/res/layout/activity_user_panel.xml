<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backdrop3"
    tools:context=".UserPanelActivity"

    >

    <TextView
        android:id="@+id/userPanelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome User"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="50sp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/deviceLocationHistoryButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/custom_button1"
        android:text="DEVICE\nLOCATION HISTORY"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPanelTextView"
        />

    <Button
        android:id="@+id/deviceCurrentLocationButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/custom_button1"
        android:layout_marginTop="50dp"
        android:text="DEVICE\nCURRENT LOCATION"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceLocationHistoryButton"
        />

    <TextView
        android:id="@+id/currentUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently logged as"
        app:layout_constraintBottom_toTopOf="@+id/deviceLocationHistoryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPanelTextView"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/complaintFormButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/custom_button1"
        android:text="COMPLAINT\nFORM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceCurrentLocationButton"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>