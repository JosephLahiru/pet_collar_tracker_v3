<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationManagementActivity">

    <Button
        android:id="@+id/deviceLiveLocationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVICE\nLIVE\nLOCATIONS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/deviceHistoryLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVICE\nLOCATION\nHISTORY"
        app:layout_constraintTop_toBottomOf="@id/deviceLiveLocationsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="328dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>