<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/signUp_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:padding="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:autofillHints="Enter a username."
            android:inputType="text"
            android:layout_marginLeft="30dp" />

        <EditText
            android:id="@+id/signUp_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:padding="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:autofillHints="Re-enter the password."
            android:inputType="textEmailAddress"
            android:layout_below="@id/signUp_username"/>

        <EditText
            android:id="@+id/signUp_device_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Device Code"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:padding="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:autofillHints="Re-enter the password."
            android:inputType="textEmailAddress"
            android:layout_below="@id/signUp_email"/>

        <EditText
            android:id="@+id/signUp_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:backgroundTint="@color/white"
            android:padding="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:autofillHints="Enter a string password."
            android:inputType="textPassword"
            android:layout_below="@id/signUp_device_code"/>

        <EditText
            android:id="@+id/signUp_Conf_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:backgroundTint="@color/white"
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:autofillHints="Re-enter the password."
            android:inputType="textPassword"
            android:layout_below="@id/signUp_password"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/signUp_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabCustomSize="65dp"
                android:text="Sign Up"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true">

            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/signUp_loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? SIGN IN"
                app:backgroundTint="@android:color/transparent"
                android:textSize="11dp"
                android:shadowColor="@android:color/transparent"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:padding="0dp"
                app:rippleColor="@android:color/transparent"
                android:outlineSpotShadowColor="@android:color/transparent"
                android:outlineAmbientShadowColor="@android:color/transparent"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>